<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Nama Aset Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="icon" href="/images/logo2.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>

        <div class="col-md-8 content-box mb-5">
          <h2>Tambah Nama Aset</h2>
          <div class="row">
            <div class="col-md-6">
              <form
                action="/nama/aset/tambah"
                method="post"
                enctype="multipart/form-data"
              >
                <div class="form-group">
                  <label for="idJenis">ID Jenis :</label>
                  <select
                    name="idJenis"
                    class="form-select"
                    aria-label="Default select example"
                  >
                    <option selected>Open this select menu</option>
                    <% jenis.forEach(function(jenis) { %>
                    <option value="<%= jenis.id_jenis%>">
                      <%= jenis.nama_jenis %> : <%= jenis.id_jenis%>
                    </option>
                    <% }); %>
                  </select>
                </div>

                <div class="form-group">
                  <label for="nama-aset">Nama Aset :</label>
                  <input
                    type="text"
                    id="nama-aset"
                    name="aset"
                    required
                    class="form-control"
                  />
                </div>
                <div class="form-group">
                  <label for="upload-image">Upload Image :</label>
                  <input type="file" name="aset-file" id="upload-image" />
                </div>
                <button
                  href="/nama/aset"
                  type="submit"
                  class="btn btn-primary me-2"
                >
                  Tambah
                </button>
                <a href="/nama/aset" class="btn btn-secondary">Batal</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
