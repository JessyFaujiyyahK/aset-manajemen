<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Laporan Aset</title>
    <style>
      table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
      }
      th,
      td {
        border: 1px solid black;
        padding: 10px;
        text-align: left;
      }
    </style>
  </head>
  <body>
    <h1>Laporan Manajemen Aset</h1>
    <table>
      <thead>
        <tr>
          <th>Nama Jenis</th>
          <th>ID Aset</th>
          <th>Nama Aset</th>
          <th>Jumlah</th>
          <th>Nilai</th>
          <th>Dibuat pada</th>
        </tr>
      </thead>
      <tbody>
        <% aset.forEach(function(aset) { %>
        <tr>
          <td><%= aset.nama_jenis %></td>
          <td><%= aset.id_aset %></td>
          <td><%= aset.nama_aset %></td>
          <td><%= aset.jumlah %></td>
          <td><%= aset.nilai %></td>
          <td><%= new Date(aset.created_at).toLocaleDateString() %></td>
        </tr>
        <% }); %>
        <tr>
          <td colspan="6">
            <strong>Total Jumlah Aset :</strong>
            <span style="float: right"><%= totalJumlah %></span>
          </td>
        </tr>
        <tr>
          <td colspan="6">
            <strong>Total Nilai :</strong>
            <span style="float: right">Rp <%= totalNilai %></span>
          </td>
        </tr>
        <% for (const jenis in totalJumlahPerJenis) { %>
        <tr>
          <td colspan="6">
            <strong>Total <%= jenis %> :</strong>
            <span style="float: right">
              <%= totalJumlahPerJenis[jenis] %> (Jumlah) - <%=
              totalNilaiPerJenis[jenis] %> (Nilai)
            </span>
          </td>
        </tr>
        <% } %> <% for (const location in totalJumlahPerLocation) { %>
        <tr>
          <td colspan="6">
            <strong>Total <%= location %> :</strong>
            <span style="float: right">
              <%= totalJumlahPerLocation[location] %> (Jumlah) - <%=
              totalNilaiPerLocation[location] %> (Nilai)
            </span>
          </td>
        </tr>
        <% } %> <% for (const category in totalJumlahPerCategory) { %>
        <tr>
          <td colspan="6">
            <strong>Total <%= category %> :</strong>
            <span style="float: right">
              <%= totalJumlahPerCategory[category] %> (Jumlah) - <%=
              totalNilaiPerCategory[category] %> (Nilai)
            </span>
          </td>
        </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
