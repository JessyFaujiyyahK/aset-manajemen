<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Aset Admin</title>
    <!-- Tautan ke Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <link rel="icon" href="/images/logo2.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>
        <div class="col-md-8 content-box mb-5">
          <h2>Edit Data Aset</h2>
          <div class="row">
            <div class="col-md-6">
              <form action="/aset/edit/<%= asetID %>" method="post">
                <div class="form-group">
                  <label for="aset">ID Aset :</label>
                  <select class="form-select" id="aset" name="aset" required>
                    <option selected value="<%= idAset %>"><%= namaAset %></option>
                    <% aset.forEach(function(aset) { %>
                    <option value="<%= aset.id_aset %>">
                      <%= aset.nama_aset %>
                    </option>
                    <% }); %>
                  </select>
                </div>
                <div class="form-group">
                  <label for="Jumlah">Jumlah :</label>
                  <input
                    type="number"
                    id="Jumlah"
                    name="jumlah"
                    required
                    class="form-control"
                    value="<%= jumlah %>"
                  />
                </div>
                <div class="form-group">
                  <label for="nilai">Nilai :</label>
                  <input
                    type="number"
                    id="nilai"
                    name="nilai"
                    required
                    class="form-control"
                    value="<%= nilai%>"
                  />
                </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="lokasi">Lokasi :</label>
                <select id="lokasi" name="lokasi" class="form-select" required>
                  <option selected value="<%= lokasiID %>"><%= namaLokasi %></option>
                  <% lokasi.forEach(function(lokasi) { %>
                  <option value="<%= lokasi.id %>">
                    <%= lokasi.nama_lokasi %>
                  </option>
                  <% }); %>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
              
              <div class="form-group">
                <label for="sumber">sumber :</label>
                <select id="sumber" name="sumber" class="form-select" required>
                  <option selected value="<%= sumberID %>"><%= namaSumber %></option>
                  
                  <% sumber.forEach(function(sumber) { %>
                  <option value="<%= sumber.id %>">
                    <%= sumber.nama_sumber %>
                  </option>
                  <% }); %>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
              
              <div class="form-group">
                <label for="kondisi">Kondisi :</label>
                <select
                  id="kondisi"
                  name="kondisi"
                  required class="form-select"
                >
                  <option selected><%= kondisi %></option>
                  <option value="Baik">Baik</option>
                  <option value="Rusak">Rusak</option>
                  <option value="Rusak Berat">Rusak Berat</option>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary me-2">Edit</button>
            <a href="/aset" class="btn btn-secondary">Batal</a>
          </div>
        </form>
        </div>
      </div>
    </div>
    <!-- JS Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
