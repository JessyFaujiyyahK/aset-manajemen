<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Nama ASet Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="icon" href="/images/logo2.png" type="image/x-icon" />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>
    

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>

        <div class="col-md-8 content-box mb-5">
          <h2>Edit Nama Aset</h2>
          <div class="row">
            <div class="col-md-6">
              <form action="/nama/aset/edit" method="post" enctype="multipart/form-data">
                <div class="form-group">
                  <label for="nama_aset">Nama Aset :</label>
                  <input 
                  type="text" 
                  id="nama_aset" 
                  name="nama_aset" 
                  required class="form-control" 
                  value="<%= nama_aset %>"/>
                </div>
                <div class="form-group">
                  <label for="img-aset">Gambar :</label>
                  <input 
                  type="file" 
                  id="img-aset" 
                  name="img-aset" 
                  onchange="previewImage(this)"
                  class="form-control"/>
                  <img id="previewImg" src="<%= img %>" alt="img" width="250">
                </div>
                <input type="hidden" name="idAset" value="<%= id_aset %>" />
                <button type="submit" class="btn btn-primary me-2">
                  Edit
                </button>
                <a href="/nama/aset" class="btn btn-secondary">Batal</a>
              </form>
            </div>
          </div>
        </div>
        
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script>
      function previewImage(input) {
        const previewImg = document.getElementById('previewImg');
        const fileInput = input.files[0];

        if (fileInput) {
          const reader = new FileReader();

          reader.onload = function (e) {
            previewImg.src = e.target.result;
          };

          reader.readAsDataURL(fileInput);
        }
      }
      </script>
  </body>
</html>
