<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Aset Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
       <!-- Datatable CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- <link rel="stylesheet" href="/css/admin-aset.css" /> -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>
    

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>

        <div class="col-8 content-box mb-5">
          <!-- Konten dalam kotak -->
          <h2>Laporan</h2>
          <!-- Tombol "Add" -->
          <div class="row mb-3" style="overflow-x:auto;">
            <table id="aset" class="display" style="width: 100%;" >
            <thead>
              <tr>
                <th scope="col">ID Aset</th>
                <th scope="col">Nama Aset</th>
                <th scope="col">Jumlah</th>
                <th scope="col">Nilai</th>
                <th scope="col">Lokasi</th>
              </tr>
            </thead>
            <tbody>
              <% aset.forEach(function(aset) { %>
                <tr data-href="/aset/detail/<%= aset.id %>">
                    <td><%= aset.id_aset %></td>
                    <td><%= aset.nama_aset %></td>
                    <td><%= aset.jumlah %></td>
                    <td><%= aset.nilai %></td>
                    <td><%= aset.nama_lokasi %></td>
                    
                </tr>
            <% }); %>
              <!-- Tambahkan lebih banyak baris sesuai dengan data Anda -->
            </tbody>
          </table>
          <form action="/generateReport" method="get">
            <h6>Generate Laporan</h6>
          
            <!-- Pilihan untuk memilih laporan berdasarkan lokasi, jenis, atau kategori -->
            <label for="laporan">Pilih Laporan Berdasarkan:</label>
            <select id="laporan" name="laporan">
              <!-- <option value="semua"></option> -->
              <option value="lokasi">Lokasi</option>
              <option value="kategori">Kategori</option>
              <option value="jenis">Jenis</option>
            </select>
          
            <!-- Tanggal Mulai -->
            <label for="startDate">Mulai Tanggal:</label>
            <input type="date" id="startDate" name="startDate" required>
          
            <!-- Tanggal Akhir -->
            <label for="endDate">Sampai Tanggal:</label>
            <input type="date" id="endDate" name="endDate" required>
  
          
            <!-- Tombol Submit -->
            <button type="submit">Download Excel</button>
          </form>
        </div>
        </div>
        

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <!-- Datatable js -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Panggil Datatable -->
    <script>
      document.querySelectorAll("tr[data-href]").forEach(function(row) {
        row.style.cursor = "pointer";
        row.addEventListener("click", function() {
          window.location.href = this.getAttribute("data-href");
        });
      });
      new DataTable('#aset', {
        lengthMenu: [5, 10, 15]
      });
      </script>
      <script>
        document.getElementById("downloadPdfBtn").addEventListener("click", function() {
          // Mengarahkan ke rute /generatePDF untuk mengunduh PDF
          window.location.href = "/generatePDF";
        });

        document.getElementById('downloadExcelBtn').addEventListener('click', function() {
          // Mengarahkan ke rute /generateExcel untuk mengunduh file Excel
          window.location.href = '/generateExcel';
        });
      </script>
      
  </body>
</html>
