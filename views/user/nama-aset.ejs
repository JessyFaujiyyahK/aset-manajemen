<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Nama Aset Admin</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Datatable CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css">
    <!-- <link rel="stylesheet" href="/css/admin-aset.css" /> -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>

        <div class="col-8 content-box mb-5">
          <!-- Konten dalam kotak -->
          <h2>Nama Aset</h2>
          <!-- Tombol "Add" -->
          <a href="/nama/aset/tambah/user" class="btn btn-primary my-4">Tambah +</a>
          <div class="row mb-3">
            <table id="aset" class="display" style="width: 100%;">
                  <thead>
                      <tr>
                          <th scope="col">ID Kategori</th>
                          <th scope="col">ID Jenis</th>
                          <th scope="col">ID Aset</th>
                          <th scope="col">Nama Aset</th>
                          <th scope="col">Aksi</th>
    
                      </tr>
                  </thead>
                  <tbody>
                    <% nama_aset.forEach(function(aset) { %>
                      <tr>
                          <td><%= aset.id_kategori %></td>
                          <td><%= aset.id_jenis %></td>
                          <td><%= aset.id_aset %></td>
                          <td><%= aset.nama_aset %></td>
                          <td>
                              <!-- Tambahkan tombol edit dan hapus sesuai kebutuhan -->
                              <a href="/nama/aset/edit/user/<%= aset.id_aset %>" class="btn btn-sm btn-primary">Edit</a>
                              <!-- Tambahkan tombol hapus dengan menggunakan form untuk mengonfirmasi penghapusan -->
                              <a onclick="return confirm('Anda yakin akan menghapus data ini?')" href="/nama/aset/delete/user/<%= aset.id_aset %>" class="btn btn-sm btn-danger">Hapus</a>
                          </td>
                      </tr>
                  <% }); %>
                  </tbody>
              </table>
        </div>         
          <!-- Elemen tabel -->
      </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>

    <!-- Datatable js -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>

    <!-- Panggil Datatable -->
    <script>
      new DataTable('#aset', {
        lengthMenu: [5, 10, 15]
      });
    </script>
  </body>
</html>
