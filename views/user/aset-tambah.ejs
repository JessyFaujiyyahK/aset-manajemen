<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Tambah Aset Admin</title>
    <!-- Tautan ke Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />

    <!-- <link rel="stylesheet" href="/css/admin-tambah.css" /> -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <%- include('navbar.ejs') %>

    <div class="container-fluid">
      <div class="row">
        <%- include('sidebar.ejs') %>

        <div class="col-md-8 content-box  mb-5">
          <h2>Tambah Data Aset</h2>
          <div class="row">
            <div class="col-md-6">
              <form action="/aset/tambah/user" method="post">
                <div class="form-group">
                  <label for="aset">ID Aset :</label>
                  <select class="form-select" id="aset" name="aset" required>
                    <option selected>Open this select menu</option>
                    <% aset.forEach(function(aset) { %>
                    <option value="<%= aset.id_aset %>">
                      <%= aset.nama_aset %>
                    </option>
                    <% }); %>
                  </select>
                </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="lokasi">Lokasi :</label>
                <select id="lokasi" name="lokasi" class="form-select" required>
                  <option selected>Open this select menu</option>
                  <% lokasi.forEach(function(lokasi) { %>
                  <option value="<%= lokasi.id %>">
                    <%= lokasi.nama_lokasi %>
                  </option>
                  <% }); %>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="Jumlah">Jumlah :</label>
                <input
                  type="number"
                  id="Jumlah"
                  name="jumlah"
                  required
                  class="form-control"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="sumber">Sumber :</label>
                <select id="sumber" name="sumber" class="form-select" required>
                  <option selected>Open this select menu</option>
                  <% sumber.forEach(function(sumber) { %>
                  <option value="<%= sumber.id %>">
                    <%= sumber.nama_sumber %>
                  </option>
                  <% }); %>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="nilai">Nilai :</label>
                <input
                  type="number"
                  id="nilai"
                  name="nilai"
                  required
                  class="form-control"
                />
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group">
                <label for="kondisi">Kondisi :</label>
                <select
                  id="kondisi"
                  name="kondisi"
                  class="form-select"
                  required
                >
                  <option value="">Pilih Kondisi</option>
                  <option value="Baik">Baik</option>
                  <option value="Rusak">Rusak</option>
                  <option value="Rusak Berat">Rusak Berat</option>
                  <!-- Tambahkan opsi sesuai dengan kebutuhan Anda -->
                </select>
              </div>
            </div>
          </div>
          <div class="d-flex justify-content-center mt-3">
            <button type="submit" class="btn btn-primary me-2">Tambah</button>
            <a href="/aset/user" class="btn btn-secondary">Batal</a>
          </div>
        </form>
        </div>
      </div>
    </div>
    <!-- JS Bootstrap -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
